<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical">

	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/whitesmoke"
				android:orientation="vertical">

			<LinearLayout
					android:id="@+id/detailProfileClick"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/white"
					android:orientation="vertical"
					android:padding="15dp">

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:drawableEnd="@drawable/ic_arrow_right"
						android:drawableTint="@color/gray"
						android:fontFamily="@font/averta_std_bold"
						android:text="Lu Xuan Xuan"
						android:textColor="@color/black"
						android:textSize="22sp"
						android:textStyle="bold" />

				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Have a nice day!"
						android:textColor="@color/gray"
						android:textSize="18sp" />
			</LinearLayout>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingVertical="15dp">

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="15dp"
							android:text="@string/my_order"
							android:textColor="@color/black"
							android:textSize="18sp"
							android:textStyle="bold" />

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="10dp">

						<LinearLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:gravity="center"
								android:orientation="vertical"
								android:padding="10dp">

							<ImageView
									android:layout_width="35dp"
									android:layout_height="35dp"
									android:src="@drawable/ic_promotion"
									android:tint="@color/lightgray" />

							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="5dp"
									android:gravity="center"
									android:text="Paying"
									android:textColor="@color/gray"
									android:textSize="16sp" />
						</LinearLayout>

						<LinearLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:gravity="center"
								android:orientation="vertical"
								android:padding="10dp">

							<ImageView
									android:layout_width="35dp"
									android:layout_height="35dp"
									android:src="@drawable/ic_packing"
									android:tint="@color/lightgray" />

							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="5dp"
									android:gravity="center"
									android:text="Packing"
									android:textColor="@color/gray"
									android:textSize="16sp" />
						</LinearLayout>

						<LinearLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:gravity="center"
								android:orientation="vertical"
								android:padding="10dp">

							<ImageView
									android:layout_width="35dp"
									android:layout_height="35dp"
									android:src="@drawable/ic_shipping"
									android:tint="@color/lightgray" />

							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="5dp"
									android:gravity="center"
									android:text="Shipping"
									android:textColor="@color/gray"
									android:textSize="16sp" />
						</LinearLayout>

						<LinearLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:gravity="center"
								android:orientation="vertical"
								android:padding="10dp">

							<ImageView
									android:layout_width="35dp"
									android:layout_height="35dp"
									android:src="@drawable/ic_rate"
									android:tint="@color/lightgray" />

							<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="5dp"
									android:gravity="center"
									android:text="Rate"
									android:textColor="@color/gray"
									android:textSize="16sp" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingVertical="15dp">

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="15dp"
							android:text="My Account"
							android:textColor="@color/black"
							android:textSize="18sp"
							android:textStyle="bold" />

					<TextView
							style="@style/SettingItem"
							android:layout_width="match_parent"
							android:layout_height="44dp"
							android:layout_marginTop="10dp"
							android:text="Address book" />

					<include
							layout="@layout/device_line"
							android:layout_width="match_parent"
							android:layout_height="0.5dp"
							android:layout_marginHorizontal="15dp" />

					<TextView
							style="@style/SettingItem"
							android:layout_width="match_parent"
							android:layout_height="44dp"
							android:text="Account Settings" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:paddingVertical="15dp">

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginHorizontal="15dp"
							android:text="Settings"
							android:textColor="@color/black"
							android:textSize="18sp"
							android:textStyle="bold" />

					<TextView
							style="@style/SettingItem"
							android:layout_width="match_parent"
							android:layout_height="44dp"
							android:layout_marginTop="10dp"
							android:text="App Settings" />
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</LinearLayout>